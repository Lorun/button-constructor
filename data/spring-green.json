{
  "options": {
    "className": "button",
    "separator" : "_",
    "buttonText": "Spring green Button",
    "previewBg": "#ffffff"
  },
  "buttons": [
    {
      "modifier": null,
      "common": {
        "rules": {
          "background": "#00e070",
          "height": 40,
          "line-height": 40,
          "padding": 20,
          "padding-left": 20,
          "padding-right": 20,
          "padding-top": 0,
          "padding-bottom": 0,
          "font-size": 14,
          "color": "#ffffff",
          "font-weight": "normal",
          "border-radius": 4
        },
        "groupRules": ["fill", "size", "font", "radius"]
      },
      "hover": {
        "rules": {
          "background": "#00c361"
        },
        "groupRules": ["fill"]
      },
      "disabled": {
        "rules": {
          "background": "#d2d8cf"
        },
        "groupRules": ["fill"]
      }
    },

    {
      "modifier": "big",
      "common": {
        "rules": {
          "height": 50,
          "line-height": 50,
          "padding": 30,
          "padding-left": 30,
          "padding-right": 30,
          "padding-top": 0,
          "padding-bottom": 0,
          "font-size": 16,
          "color": "#ffffff",
          "font-weight": "normal"
        },
        "groupRules": ["size", "font"]
      }
    },

    {
      "modifier": "small",
      "common": {
        "rules": {
          "height": 30,
          "line-height": 30,
          "padding": 15,
          "padding-left": 15,
          "padding-right": 15,
          "padding-top": 0,
          "padding-bottom": 0,
          "font-size": 13,
          "color": "#ffffff",
          "font-weight": "normal"
        },
        "groupRules": ["size", "font"]
      }
    }
  ]
}